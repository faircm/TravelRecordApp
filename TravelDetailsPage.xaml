<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecordApp.TravelDetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="destinationId" />
            <Entry x:Name="destinationLabel" />
            <Button x:Name="updateBtn" Text="Update" Clicked="updateBtn_Clicked" />
            <Button x:Name="deleteBtn" Text="Delete" Clicked="deleteBtn_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>